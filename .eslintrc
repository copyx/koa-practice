{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "plugins": ["prettier"],
    "extends": [
        "eslint:recommended",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": [
            "error",
            "always"
        ],
        "no-unused-vars": "error",
        "no-undef": "error",
        "no-tabs": "error",
        "no-trailing-spaces": "error",
        "no-console": "off"
    }
}
